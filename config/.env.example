# Feature Store Configuration
# Copy this file to .env and adjust values as needed

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Feature Store Configuration
FEATURE_STORE_NAME=production-feature-store
OFFLINE_STORE_PATH=./data/offline_store

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
API_DEBUG=False

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/feature-store.log

# Feature Store Settings
MAX_FEATURES_PER_REQUEST=100
DEFAULT_FEATURE_TTL=86400  # 24 hours in seconds
ENABLE_FEATURE_VALIDATION=True

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# Environment
ENVIRONMENT=production  # development, staging, production
